@using GridMvc.Html
@using GridMvc.Sorting
@model LaneBids.Models.AdminMaintenance

<!-- Structure Types -->
<div id="StructureType">
    <h4>Structure Types</h4>
    @Html.Grid(Model.StructureTypeList).Columns(col =>
    {
        col.Add(c => c.Name);
        col.Add(c => c.Create_Date);
        col.Add(c => c.FullName);
        col.Add(c => c.ID).Sanitized(false).Encoded(false).RenderValueAs(e => @Html.ActionLink("Edit", "StructureTypeEdit", new {@id = e.ID}, new {@class = "structure-modal"}));
    }).Named("structureTypes")

    <span class="AddNewLink" onclick="Add()">Add New</span>

    <!-- Modal -->
    <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">Modal header</h3>
        </div>
        <div class="modal-body">
            <p>Loading…</p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <button class="btn btn-primary">Save changes</button>
        </div>
    </div>
</div>

<script>
    $(function() {
        $(".structure-modal").click(function (event) {
            event.preventDefault();
            $('#myModal').removeData("modal");
            $('#myModal').modal({ remote: event.currentTarget.href });
        });
    });

    $("#submitStructure").click(function(ev) {
        ev.preventDefault();

        $.ajax({
            url: '/Admin/StructureTypeEdit',
            data: ev.id,
            dataType: 'html',
            success: function (data) {
                alert(data);
            }
        });

        $("#New").toggleClass("hide");
    });

    $("#cancel").click(function(ev) {
        ev.preventDefault();
        $("#New").toggleClass("hide");
    });

    function Add(ev) {
        $("#New").toggleClass("hide");
    }
</script>
