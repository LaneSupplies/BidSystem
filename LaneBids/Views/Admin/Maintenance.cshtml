@model LaneBids.Models.AdminMaintenance
@{
    ViewBag.Title = "Maintenance";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h2>Maintenance Page</h2>
<br/>
<div ng-controller="MaintController">
    <!-- Structure Type Grid -->

    <div class="caption">Structure Type</div>

    <table class="typeTable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Create Date</th>
                <th>Created By</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="type in getTypeData">
                <td>{{type.Name}}</td>
                <td>{{type.Create_Date}}</td>
                <td>{{type.FullName}}</td>
                <td>
                    <a href="#" ng-click="editTypeData(type)">Edit</a>
                </td>
                <td>
                    <a href="#" ng-click="deleteTypeData(type)">Delete</a>
                </td>
            </tr>
        </tbody>
    </table>

    <modal title="Login form" visible="showModal">
        <form role="form">
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" id="email" placeholder="Enter email" />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Password" />
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </modal>
</div>

@section Scripts {
    
    @Scripts.Render("~/bundles/Admin")
}




