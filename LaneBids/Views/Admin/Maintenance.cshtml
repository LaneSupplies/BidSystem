@model LaneBids.Models.AdminMaintenance
@{
    ViewBag.Title = "Maintenance";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h2>Maintenance Page</h2>
<br/>
<div ng-controller="MaintController">
    <!-- Structure Type Grid -->

    <div class="caption">Structure Type</div>

    <table class="typeTable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Create Date</th>
                <th>Created By</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="type in getTypeData">
                <td>{{type.Name}}</td>
                <td>{{type.Create_Date}}</td>
                <td>{{type.FullName}}</td>
                <td>
                    <a href="#" ng-click="editTypeData(type)">Edit</a>
                </td>
                <td>
                    <a href="#" ng-click="deleteTypeData(type)">Delete</a>
                </td>
            </tr>
        </tbody>
    </table>

    <!-- Modal -->
    <div id="typeDataModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="typeDataModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document" ng-controller="MaintController">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="typeDataModalLabel">Edit Data</h4>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="TypeDataEnum" value="{{ typeData.TypeDataEnum }}" />
                    <input type="hidden" id="ID" value="{{ typeData.ID }}" />

                    <div class="divLabel">
                        <label>ID:</label>
                        <div>{{ typeData.ID }}</div>
                    </div>

                    <div class="divLabel">
                        <label>Name:</label>
                        <input type="text" id="Name" value="{{ typeData.Name }}" />
                    </div>
                </div>

                <div class="modal-footer button-list">
                    <button type="button" ng-click="updateTypeData(typeData)">Update</button>&nbsp;&nbsp;
                    <button type="button" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    
    @Scripts.Render("~/bundles/Admin")
}

